# API Configuration
API_HOST=0.0.0.0
API_PORT=8002
DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# CORS settings (comma-separated list)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8001"]

# Database Configuration
# Options: postgres, sqlite
DATABASE_BACKEND=postgres
# PostgreSQL connection string (used when DATABASE_BACKEND=postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/psychology_data
# SQLite database path (used when DATABASE_BACKEND=sqlite)
SQLITE_DB_PATH=data/psychology_data.db

# Database connection parameters for entrypoint.sh
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres

# Psychology Data Service
PSYCHOLOGY_SERVICE_URL=http://localhost:8001/api

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# API Documentation
SHOW_DOCS=True

# Version
VERSION=0.1.0
